{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install --platform=linux --arch=x64 && npm run build",
        "installCommand": "npm install --platform=linux --arch=x64",
        "framework": "vite",
        "outputDirectory": "dist",
        "headers": [
          {
            "source": "/(.*)\\.js",
            "headers": [
              {
                "key": "Content-Type",
                "value": "application/javascript"
              }
            ]
          }
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "github": {
    "silent": true
  }
} 